  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "packageManager": "pnpm@10.25.0",
  "sideEffects": [
    "*.css",
    "*.scss",
    "src/assets/**/*",
    "public/**/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "biome check --write"
    ],
    "*.scss": [
      "stylelint --fix --cache"
    ]
  }
}
