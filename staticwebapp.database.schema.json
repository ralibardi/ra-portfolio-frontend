{
  "type": "cosmos",
  "collections": {
    "Projects": {
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "technologies": { "type": "array", "items": { "type": "string" } },
          "imageUrl": { "type": "string" },
          "githubUrl": { "type": "string" },
          "liveUrl": { "type": "string" }
        },
        "required": ["id", "title", "description"]
      }
    },
    "Skills": {
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "category": { "type": "string" },
          "proficiency": { "type": "number" }
        },
        "required": ["id", "name", "category"]
      }
    },
    "Experiences": {
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "companyName": { "type": "string" },
          "position": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" },
          "description": { "type": "string" }
        },
        "required": ["id", "companyName", "position", "startDate"]
      }
    },
    "Education": {
      "schema": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "institutionName": { "type": "string" },
          "degree": { "type": "string" },
          "field": { "type": "string" },
          "startDate": { "type": "string", "format": "date" },
          "endDate": { "type": "string", "format": "date" }
        },
        "required": ["id", "institutionName", "degree"]
      }
    }
  }
}
