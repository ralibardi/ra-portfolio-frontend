  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "prepare": "husky install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "update:husky": "pnpm update husky lint-staged @biomejs/biome",
    "clean": "rimraf .next",
    "clean:all": "rimraf .next dist node_modules pnpm-lock.yaml"
