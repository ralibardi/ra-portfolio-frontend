    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "30.2.0",
    "jest-axe": "10.0.0",
    "jest-environment-jsdom": "30.2.0",
    "lint-staged": "16.2.7",
    "postcss": "8.4.49",
    "storybook": "10.1.7",
